<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>JE Accordion Menu</name> 
	<author>jExtensions</author>
	<creationDate>September 2012</creationDate>
	<copyright>Copyright (C) 2012 jExtensions.com - All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later;</license>
	<authorEmail>info@jextensions.com</authorEmail>
	<authorUrl>www.jextensions.com</authorUrl>
	<version>2.5.0</version>
	<description>
	<![CDATA[
	<h1>JE jQuery Accordion Menu Module</h1>
	<div style="margin:0 0 0 10px; font-size:15px;">Download more free extensions at <a href="http://jextensions.com" target="_blank">jExtensions.com</a>;
	<br/>Get support for this Joomla 2.5 module on the official <a href="http://jextensions.com/free-accordion-menu-joomla-2.5/" target="_blank">jQuery Accordion Menu</a> page.</div><br/>
	<div style="margin:0 0 0 10px; font-size:11px;">Credits: <a href="http://www.sks.com.np/" target="_blank" >SKS</a>, <a href="http://twitter.github.com/bootstrap/" target="_blank" >Bootstrap</a></div>
	<br/>
		]]>
	</description>
	<files>
		<filename module="mod_je_accordionmenu">mod_je_accordionmenu.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_je_accordionmenu.xml</filename>
	</files>
	<config>
		<fields name="params">						
			<fieldset name="basic">
				<field name="jQuery" type="list" default="1" label="jQuery" description="Enable or Disable the latest jQuery version. Make sure that jQuery is loaded only once on your website.">
					<option value="0">Disable</option>
					<option	value="1">Enable</option>
				</field>			
				<field name="menutype" type="menu" label="Select Menu" description="Choose a menu to display." />				
				<field name="color" type="list" default="default" label="Select Color" description="Choose a color style.">
					<option value="default">Default</option>
					<option value="blue">Blue</option>
					<option value="lightblue">Light Blue</option>
					<option value="red">Red</option>
					<option value="orange">Orange</option>
					<option value="green">Green</option>
					<option value="dark">Dark</option>
				</field>
				<field name="accordion" type="list" default="hover" label="Star Accordion" description="Choose when you want to start the accordion animation.">
					<option value="hover">On Hover</option>
					<option value="click">On Click</option>
				</field>
				<field name="speed" type="list" default="normal" label="Animation Speed" description="Accordion animation speed.">
					<option value="slow">Slow</option>
					<option value="normal">Normal</option>
					<option value="fast">Fast</option>
				</field>								
				<field name="startLevel" type="list" default="1" label="Start Level" description="Menu start level.">
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>
				<field name="endLevel" type="list" default="2" label="End Level" description="Menu end level.">
					<option value="0">JALL</option>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>
				
			</fieldset>

			<fieldset name="advanced">
				<field name="tag_id" type="text" label="Menu Tag ID" description="An ID attribute to assign to the root UL tag of the menu (optional)" />
				<field name="class_sfx" type="text" label="Menu Class Suffix" description="A suffix to be applied to the CSS class of the menu items" />
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option	value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode"	type="hidden" default="itemid">
					<option	value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
